<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title>Shull Weather</title>
  <link rel="stylesheet" href="/css/bootstrap.css">
</head>

<body>
  <style>
    html {
      /*max-width: 70ch;*/
      padding: 3em 1em;
      margin: auto;
      line-height: 1.75;
      font-size: 1.25em;
    }
  </style>
  <div class="">
    <div class="row">
      <div class="col-4">
        <h3>aaaaaaa</h3>
      </div>
      <div class="col-6">
        <h2>Home page</h2>
        <table class="table table-striped table-bordered table-sm table-responsive">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">as3935LightningCount</th>
            <th scope="col">as3935LastInterrupt</th>
            <th scope="col">as3935LastDistance</th>
            <th scope="col">currentWindSpeed</th>
            <th scope="col">currentWindGust</th>
            <th scope="col">currentWindDirection</th>
            <th scope="col">currentWindDirectionVoltage</th>
            <th scope="col">totalRain</th>
            <th scope="col">bmp180Temperature</th>
            <th scope="col">bmp180Pressure</th>
            <th scope="col">bmp180Altitude</th>
            <th scope="col">bmp180SeaLevel</th>
            <th scope="col">outsideTemperature</th>
            <th scope="col">outsideHumidity</th>
            <th scope="col">insideTemperature</th>
            <th scope="col">insideHumidity</th>
            <th scope="col">AQI</th>
          </tr>
          {{#each weather}}
          <tr>
            <td>{{this.ID}}</td>
            <td>{{this.as3935LightningCount}}</td>
            <td>{{this.as3935LastInterrupt}}</td>
            <td>{{this.as3935LastDistance}}</td>
            <td>{{this.currentWindSpeed}}</td>
            <td>{{this.currentWindGust}}</td>
            <td>{{this.currentWindDirection}}</td>
            <td>{{this.currentWindDirectionVoltage}}</td>
            <td>{{this.totalRain}}</td>
            <td>{{this.bmp180Temperature}}</td>
            <td>{{this.bmp180Pressure}}</td>
            <td>{{this.bmp180Altitude}}</td>
            <td>{{this.bmp180SeaLevel}}</td>
            <td>{{this.outsideTemperature}}</td>
            <td>{{this.outsideHumidity}}%</td>
            <td>{{this.insideTemperature}}</td>
            <td>{{this.insideHumidity}}%</td>
            <td>{{this.AQI}}</td>
          </tr>
          {{/each}}
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="..." alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="..." alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="..." alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>

</body>

</html>